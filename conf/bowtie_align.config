includeConfig "../conf/base.config"

params {
    save_unaligned = true
}

process {
    withName: "BOWTIE_ALIGN" {
        ext.args = "-v 2 -m 100 --norc --best --strata"
    }
}

profiles {
    test {
       params.fastq = "assets/demultiplexed.fastq.gz"
       params.index = "assets/bowtie"
    }
}