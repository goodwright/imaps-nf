{
    "title": "Demultiplex and Analyse",
    "description": "Analyses a demultiplxed reads file using the standard CLIP pipeline.",
    "type": "object",
    "definitions": {
        "sample_option": {
            "title": "Sample Options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Metadata about the sample.",
            "properties": {
                "id": {
                    "type": "string",
                    "mimetype": "text/plain",
                    "required": true,
                    "description": "The name of the sample the reads file represents."
                },
                "single_end": {
                    "type": "string",
                    "mimetype": "text/plain",
                    "required": true,
                    "description": "Is the reads file single-end pairing?"
                }
            }
        },
        "file_options": {
            "title": "File Options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Files needed for processing of the reads file.",
            "properties": {
                "fastq": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "fastq.gz",
                    "imapsType": "demultiplexed",
                    "required": true,
                    "description": "Demultiplexed reads file."
                },
                "smrna_genome": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "ebwt",
                    "required": true,
                    "description": "smRNA files."
                },
                "star_index": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "",
                    "required": true,
                    "description": "STAR Genome."
                },
                "gtf": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "gtf",
                    "required": true,
                    "description": "GTF File."
                },
                "genome_fai": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "fai",
                    "required": true,
                    "description": "FAI File."
                },
                "icount_regions": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "gtf.gz",
                    "required": true,
                    "description": "iCount Regions File."
                },
                "icount_segment": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "gtf",
                    "required": true,
                    "description": "iCount Segmentation File."
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/file_options"
        }
    ]
}