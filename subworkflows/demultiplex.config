includeConfig '../conf/base.config'

process {

    withName: 'FASTQC' {
        publishDir = [ path: { "${params.outdir}/${task.process.toLowerCase().split(':')[-1]}" } ]
    }

    withName: 'CSV_TO_BARCODE' {
        publishDir = [ path: { "${params.outdir}/${task.process.toLowerCase().split(':')[-1]}" } ]
    }

    withName: 'ULTRAPLEX' {
        publishDir = [ path: { "${params.outdir}/${task.process.toLowerCase().split(':')[-1]}" } ]
    }

}

profiles {
    test      { includeConfig '../conf/test.config'      }
    iMaps     { includeConfig '../conf/imaps.config'      }
}