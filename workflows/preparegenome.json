{
    "title": "Prepare Genome",
    "description": "Indexes a genome.",
    "type": "object",
    "definitions": {
        "file_options": {
            "title": "File options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "The various files that need to be input.",
            "properties": {
                "fasta": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "fn?a(sta)?(\\.gz)?$",
                    "required": true,
                    "description": "A FASTA file containing the raw genome sequence to be annotated."
                },
                "gtf": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "gtf",
                    "required": true,
                    "description": "A GTF file containing annotations of various loci within the genome."
                }
            }
        },
        "extra_options": {
            "title": "Extra options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Additional options and parameters.",
            "properties": {
                "param1": {
                    "type": "string",
                    "mimetype": "text/plain",
                    "pattern": "fa.gz",
                    "required": true,
                    "description": "Additional parameter 1."
                },
                "param2": {
                    "type": "string",
                    "mimetype": "text/plain",
                    "pattern": "gtf",
                    "description": "Additional parameter 2."
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/file_options"
        }
    ]
}